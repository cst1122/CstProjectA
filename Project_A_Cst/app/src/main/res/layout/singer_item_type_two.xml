        android:gravity="center"
        android:text="华语男歌手"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@mipmap/btn_more_left_arrow_nor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</RelativeLayout>
    
</LinearLayout>