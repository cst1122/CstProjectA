              android:layout_width="match_parent"
              android:layout_height="70dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/tv_singer_item_type_two"
