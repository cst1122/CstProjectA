<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="120dp"
    android:id="@+id/notification">
    <ImageView
        android:id="@+id/iv_noti_music_image"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@android:color/black"
            android:textSize="@dimen/two_zero_sp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:id="@+id/tv_noti_song_name"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/three_zero_dp"/>
        <TextView
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_below="@+id/tv_noti_song_name"
            android:id="@+id/tv_noti_singer"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/three_zero_dp"/>
        <ImageView
            android:id="@+id/iv_noti_finish"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:src="@mipmap/bt_notificationbar_close"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/two_zero_dp"
            android:layout_height="@dimen/two_zero_dp"/>

        <ImageView
            android:id="@+id/iv_noti_play"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/bt_notificationbar_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_noti_last"
            android:layout_marginRight="@dimen/two_zero_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/iv_noti_play"
            android:src="@mipmap/bt_notificationbar_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_noti_next"
            android:layout_marginLeft="@dimen/two_zero_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_noti_play"
            android:src="@mipmap/bt_notificationbar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>