<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="230dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
              android:descendantFocusability="afterDescendants">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/st_iv"
        android:src="@mipmap/yuanzhu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/st_iv"
        android:text="热门歌手"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/st_iv_two"
        android:layout_alignParentRight="true"
        android:src="@mipmap/btn_more_left_arrow_nor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_toLeftOf="@id/st_iv_two"
        android:gravity="center"
        android:text="更多"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    
</RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_singer_item_type_one"
        android:layout_width="match_parent"
        android:layout_height="140dp"></android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_singer_item_type_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        />

</LinearLayout>