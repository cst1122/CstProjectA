<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:id="@+id/fragment_main_rl">

    <LinearLayout
        android:id="@+id/linearlayout_main_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_linearlayout_up_height"
        android:background="@color/mainBlue"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_more_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_gengduo_normal" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_main_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            app:tabIndicatorColor="@android:color/transparent"></android.support.design.widget.TabLayout>

        <ImageButton
            android:id="@+id/btn_search_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@mipmap/main_search" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout_main_up"></android.support.v4.view.ViewPager>


</RelativeLayout>